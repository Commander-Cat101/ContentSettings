{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/ContentSettings.csproj"],
          "src": "../ContentSettings"
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml",
      "properties": {
        "TargetFramework": "netstandard2.1"
      },
      "namespaceLayout": "nested"
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "ContentSettings Documentation",
      "_appLogoPath": "images/contentsettings-banner.png",
      "_enableSearch": true,
      "_gitUrlPattern": "github"
    },
    "content": [
      {
        "files": ["api/**/*.yml", "api/index.md"]
      },
      {
        "files": ["toc.yml", "index.md"]
      },
      {
        "files": ["guides/**/*.md", "guides/**/toc.yml"]
      },
      {
        "src": "../",
        "files": ["CHANGELOG.md"]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "dest": "_site",
    "template": ["default", "modern", "templates/material", "plugins/last-modified"],
    "postProcessors": [
      "ExtractSearchIndex",
      "LastModifiedPostProcessor"
    ],
    "xrefService": ["https://xref.docs.microsoft.com/query?uid={uid}"]
  }
}